        }
        
        # Format response data
        result = {
            'success': True,
            'period': days,
            'home_batters': [
                {
                    'id': p['id'], 
                    'name': p['name'], 
                    'stats': {str(days): p.get('stats', {}).get(str(days), MLBStatsAPI._get_default_stats('hitting'))}
