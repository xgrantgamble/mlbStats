@app.route('/')
def home():
    """Home page showing today's games"""
    try:
        games = MLBStatsAPI.get_todays_games()
        favorites = session.get('favorites', [])
        current_date = datetime.now().strftime('%A, %B %d, %Y')
        
        # Format game times for display
